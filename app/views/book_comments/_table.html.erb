<table>
  <% comments.each do |comment| %>
    <tr>
      <td>
        <%= link_to user_path(book.user) do %>
          <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <%= comment.user.name %>
        <% end %>
      </td>
      <td><%= comment.book_comment %></td>
      <% if comment.user == current_user %>
        <td><%= link_to "Destroy", book_book_comment_path(book, comment), method: :delete, remote: true, class: "btn btn-sm btn-danger destroy_book_#{book.id}" %></td>
      <% end %>
    </tr>
  <% end %>
</table>