<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to user_path(book.user) do %>
          <%= attachment_image_tag(@user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td>
          <% if current_user.already_favorited?(book) %>
            <%= link_to book_favorites_path(book), method: :delete do %>
              <i class="fas fa-heart" style="color: red;"></i>
            <% end %>
            <span style="color: red;"><%= book.favorites.count %></span>
          <% else %>
            <%= link_to book_favorites_path(book), method: :book do %>
              <i class="far fa-heart"></i>
            <% end %>
            <%= book.favorites.count %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>